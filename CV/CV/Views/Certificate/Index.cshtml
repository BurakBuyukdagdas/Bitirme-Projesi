@using EntityLayer.Concrete
@model List<Certificate>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

 <div class="row">
        <div class="col">
          <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
            </div>
            <div class="table-responsive">
              <table class="table align-items-center table-dark table-flush">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col" class="sort" data-sort="name">Sertifika</th>
                    <th scope="col" class="sort" data-sort="budget">Açıklama</th>
                    <th scope="col" class="sort" data-sort="status">Durum</th>
                    <th scope="col">Sertifika</th>
                    <th scope="col" class="sort" data-sort="completion">Tamamlama</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Düzenle</th>
                  </tr>
                </thead>
                <tbody class="list">
                    @foreach(var item in Model)
                    {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.Paltform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Title</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @{
                                        string description = item.Description;
                                        if (description != null)
                                        {
                                            description = description.Length <= 14 ? description : description.Substring(0, 14);
                                        }
                                    }
                                    @description ...
                                </td>

                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-warning"></i>
                                        <span class="status">@item.Status</span>
                                    </span>
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Ryan Tompson">
                                            <img alt="Image placeholder" src="@item.Image">
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-warning"></i>
                                        <span class="status">@item.Value</span>
                                    </span>
                                </td>
                                <td><a href="/Certificate/DeleteCertificate/@item.CertificateID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Certificate/EditCertificate/@item.CertificateID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                    }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <br />
        <a href="/Certificate/AddCertificate/" class="btn btn-primary">Setifika Ekle</a>


